{
  "name": "react-boilerplate",
  "version": "1.1.0",
  "description": "An opinionated react boilerplate with typescript, react-query, react-router, react-testing-library, eslint & prettier.",
  "license": "MIT",
  "homepage": "https://cmacdonnacha.github.io/react-boilerplate/",
  "scripts": {
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx",
    "test:no-watch": "react-scripts test --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint",
      "pre-push": "npm run test:no-watch"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!/node_modules/",
      "!src/utils/**/*",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/react-app-env.d.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@typescript-eslint/parser": "^4.17.0",
    "axios": "^0.21.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^3.12.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1",
    "styled-icons": "^10.29.0",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.8",
    "babel-plugin-macros": "^3.0.1",
    "husky": "^5.1.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react-scripts": "^5.0.1",
    "source-map-explorer": "^2.5.2",
    "web-vitals": "^1.1.0"
  }
}
